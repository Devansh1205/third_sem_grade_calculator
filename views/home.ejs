<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grade Calculator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <% if(locals.final_grade){ %>
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Grade in IOT</th>
                        <th scope="col">Final Grade</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>6</td>
                        <td><%= final_grade + 12/21 %></td>
                    </tr>
                    <tr>
                        <td>8</td>
                        <td><%= final_grade + 16/21 %></td>
                    </tr>
                    <tr>
                        <td>9</td>
                        <td><%= final_grade + 18/21 %></td>
                    </tr>
                    <tr>
                        <td>10</td>
                        <td><%= final_grade + 20/21 %></td>
                    </tr>
                </tbody>
            </table>
        <% } else { %>
            <div class="alert alert-info" role="alert">
                <h4 class="alert-heading">Attention!</h4>
                <p>Please enter your marks and hit submit in order to calculate your final grade.</p>
            </div>
        <% } %>

        <form action="/" method="post" onsubmit="return validateForm()">
            <div class="row">
                <div class="col-md-6">
                    <label for="java_marks" class="form-label">Enter grade in Java</label>
                    <input type="number" class="form-control" id="java_marks" name="java_marks" placeholder="Grade in Java" required>
                </div>
                <div class="col-md-6">
                    <label for="maths_marks" class="form-label">Enter grade in Maths</label>
                    <input type="number" class="form-control" id="maths_marks" name="maths_marks" placeholder="Grade in Maths" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="DAA_marks" class="form-label">Enter grade in DAA</label>
                    <input type="number" class="form-control" id="DAA_marks" name="DAA_marks" placeholder="Grade in DAA" required>
                </div>
                <div class="col-md-6">
                    <label for="SE_marks" class="form-label">Enter grade in SE</label>
                    <input type="number" class="form-control" id="SE_marks" name="SE_marks" placeholder="Grade in SE" required>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="COA_marks" class="form-label">Enter grade in COA</label>
                    <input type="number" class="form-control mb-3" id="COA_marks" name="COA_marks" placeholder="Grade in COA" required>
                </div>
            </div>

            <input type="submit" class="btn btn-primary" value="Submit">
        </form>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UoT8I+5fAdDs7d9GFbDtBKePDZuSHaO9/22V+nxIbxmKtM8RujqFuFq3RBEhLzC+" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>

function validateForm() {
    var javaMarks = document.getElementById('java_marks').value;
    var mathsMarks = document.getElementById('maths_marks').value;
    var DAAMarks = document.getElementById('DAA_marks').value;
    var COAMarks = document.getElementById('COA_marks').value;
    var SEMarks = document.getElementById('SE_marks').value;

    if (![6, 8, 9, 10].includes(parseInt(javaMarks))) {
        alert('Invalid input. Please enter a valid grade');
        return false;
    }

    if (![6, 8, 9, 10].includes(parseInt(mathsMarks))) {
        alert('Invalid input. Please enter a valid grade');
        return false;
    }

    if (![6, 8, 9, 10].includes(parseInt(DAAMarks))) {
        alert('Invalid input. Please enter a valid `grade');
        return false;
    }

    if (![6, 8, 9, 10].includes(parseInt(COAMarks))) {
        alert('Invalid input. Please enter a valid grade');
        return false;
    }

    if (![6, 8, 9, 10].includes(parseInt(SEMarks))) {
        alert('Invalid input. Please enter a valid grade');
        return false;
    }

    return true;
}
    </script>
</body>
</html>
